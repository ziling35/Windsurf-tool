{
  "name": "papercrane-windsurf",
  "version": "1.0.0",
  "description": "PaperCrane-Windsurf 续杯工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "papercrane",
    "windsurf",
    "account",
    "switcher"
  ],
  "author": "PaperCrane",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "lucide": "^0.553.0",
    "sql.js": "^1.10.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.papercrane.windsurf",
    "productName": "PaperCrane-Windsurf",
    "publish": null,
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sql.js/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!dist",
      "!.git",
      "!.github",
      "!PERFORMANCE_DEBUG.md"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PaperCrane-Windsurf"
    },
    "portable": {
      "requestExecutionLevel": "user",
      "unpackDirName": "PaperCrane-Windsurf"
    },
    "compression": "normal",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    }
  }
}
